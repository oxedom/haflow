---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="haflow">
  <div class="max-w-xl mx-auto px-6 py-24">
    <h1 class="text-4xl font-bold mb-8" style="color: #33ff33;">haflow</h1>

    <p class="mb-12 text-gray-600">
      Local-first orchestrator for AI-assisted missions.
    </p>

    <pre><code><span class="text-gray-400"># install</span>
git clone https://github.com/oxedom/haflow.git
cd haflow && pnpm install

<span class="text-gray-400"># run</span>
pnpm --filter @haflow/shared build
pnpm --filter @haflow/backend dev
pnpm --filter frontend dev</code></pre>

    <p class="mt-12 text-sm text-gray-400">
      <a href="https://github.com/oxedom/haflow">github</a>
    </p>
  </div>
</BaseLayout>
