{
  "name": "@ralphy/backend",
  "version": "0.0.1",
  "type": "module",
  "description": "Backend server for Ralphy - multi-project Claude Code orchestrator",
  "author": "oxedom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oxedom/ralphy.git",
    "directory": "packages/backend"
  },
  "bugs": {
    "url": "https://github.com/oxedom/ralphy/issues"
  },
  "homepage": "https://github.com/oxedom/ralphy#readme",
  "keywords": [
    "ralphy",
    "claude",
    "backend",
    "server"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@ralphy/shared": "workspace:*",
    "better-sqlite3": "^11.0.0",
    "cors": "^2.8.5",
    "dockerode": "^4.0.9",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "tree-kill": "^1.2.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/dockerode": "^4.0.0",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "supertest": "^6.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
