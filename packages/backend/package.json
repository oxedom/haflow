{
  "name": "@haflow/backend",
  "version": "0.0.1",
  "type": "module",
  "description": "Backend server for Haflow - multi-project Claude Code orchestrator",
  "author": "oxedom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oxedom/haflow.git",
    "directory": "packages/backend"
  },
  "bugs": {
    "url": "https://github.com/oxedom/haflow/issues"
  },
  "homepage": "https://github.com/oxedom/haflow#readme",
  "keywords": [
    "haflow",
    "claude",
    "backend",
    "server"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@haflow/shared": "workspace:*",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@vitest/coverage-v8": "^1.6.1",
    "supertest": "^7.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}